                            Carbohydrates: @Model.MacronutrientData.Where(m => m.MealType == MealType.Snack).Sum(m => m.Carbohydrates).ToString("0.##")g,
                            Fat: @Model.MacronutrientData.Where(m => m.MealType == MealType.Snack).Sum(m => m.Fat).ToString("0.##")g,
