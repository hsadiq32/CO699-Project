@page
@model MacroFit.Pages.Foods.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

@if (ViewData.ContainsKey("Errors"))
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in (List<string>)ViewData["Errors"])
            {
                <li>@error</li>
            }
        </ul>
    </div>
}

<h4>Food</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
