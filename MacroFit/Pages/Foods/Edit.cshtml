@page
@using MacroFit.Models
@model MacroFit.Pages.Foods.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>FoodLog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FoodLog.Id" />
            <div class="form-group">
                <label asp-for="FoodLog.DateTime" class="control-label"></label>
                <input asp-for="FoodLog.DateTime" class="form-control" />
                <span asp-validation-for="FoodLog.DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodLog.Type" class="control-label"></label>
                <select asp-for="FoodLog.Type" asp-items="Html.GetEnumSelectList<MealType>()" class="form-control"></select>
                <span asp-validation-for="FoodLog.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodLog.HungerLevel" class="control-label"></label>
                <select asp-for="FoodLog.HungerLevel" asp-items="Html.GetEnumSelectList<HungerLevel>()" class="form-control"></select>
                <span asp-validation-for="FoodLog.HungerLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodLog.Amount" class="control-label"></label>
                <input asp-for="FoodLog.Amount" class="form-control" />
                <span asp-validation-for="FoodLog.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
